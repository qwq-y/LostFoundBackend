drop table post cascade;
drop table feedback cascade;

create table user_
(
    id       bigint primary key,
    password varchar,
    type     varchar
);

create table post
(
    id               bigint primary key,
    item_name        varchar,
    item_type        varchar,
    item_description varchar,
    picture          varchar,
    publish_time     bigint,
    claim_time       bigint,
    rough_place      varchar,
    detailed_place   varchar,
    publisher_id     bigint references user_ (id),
    claimant_id      bigint references user_ (id),
    is_claimed       bool,
    is_hidden        bool
);

create table feedback
(
    id          bigint primary key,
    reporter_id bigint references user_ (id),
    time        bigint,
    body        varchar
);

insert into user_
values (12345678, 12345678, 'user');
insert into user_
values (11111111, 11111111, 'administrator');

insert into post
values (1, 'apple', 'food', 'a big apple', null, null, null, null, null, 12345678, null, false, false);
insert into post
values (2, '桌面截图', '其他', '与其反思自己', 'test.png', 1683739673, 1683739673, 'others', 'computer', '12345678', null, false, false);

select * from post order by post.publish_time;



